<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/family_container"
    android:orientation = "vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.helenssc.android.toddlertabletpublic.MainActivity"
    tools:ignore="MergeRootFrame" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize = "20sp"
            android:layout_margin="25dp"
            android:text="Enter a word and record to create your own custom sight word list"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal">
        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_margin="25dp"
            android:maxLines = "1"
            android:textSize = "20sp"
            android:id="@+id/sw_editText"/>
        <ImageButton
            style="@style/KeyBoardButton"
            android:src="@drawable/down_key"
            android:width="75dp"
            android:id="@+id/sw_key_down"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sw_record_layout"
        android:orientation = "horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal">
        <Button
            style="@style/CustomListButton"
            android:text="Save and Finish"
            android:id="@+id/sw_save"/>
        <Button
            style="@style/CustomListButton"
            android:text="Save and Add Another"
            android:id="@+id/sw_save_continue"/>
    </LinearLayout>


</LinearLayout>


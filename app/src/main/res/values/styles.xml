<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="RemoteButton" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="RemoteCircleButton" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/circlebutton</item>
        <item name="android:shadowRadius">5</item>
    </style>



    <style name="RemoteNumberButton" parent="RemoteButton">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:background">@drawable/buttonshape</item>
    </style>

    <style name="RemotePowerButton" parent="RemoteButton">
        <item name="android:textColor">#FF0000</item>
        <item name="android:layout_width">225dp</item>
        <item name="android:background">@drawable/powerbuttonshape</item>

    </style>

    <style name="CustomListButton" parent="RemoteButton">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">245dp</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="KeyBoardButton" parent="RemoteButton">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
